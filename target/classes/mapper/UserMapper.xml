<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定和哪个Mapper映射器接口对应 -->
<mapper namespace="cn.xuanfs.forum.mapper.UserMapper">
    <!--插入用户-->
    <insert id="insert" parameterType="cn.xuanfs.forum.entity.User">
        insert into user (name,accout_id,token,gmt_create,gmt_modified) values (#{name},#{accoutId},#{token},#{gmtCreate},#{gmtModified})
    </insert>

    <select id="finfByToken" resultType="cn.xuanfs.forum.entity.User">
        select * from user where token = #{token}
    </select>
</mapper>